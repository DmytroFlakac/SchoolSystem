<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:r="clr-namespace:SchoolSystem.App.Views.Student"
       xmlns:subjects="clr-namespace:SchoolSystem.App.Views.Subject"
       xmlns:evaluations="clr-namespace:SchoolSystem.App.Views.Evaluations"
       xmlns:a="clr-namespace:SchoolSystem.App.Views.Activity"
       xmlns:text="clr-namespace:SchoolSystem.App.Resources.Texts"
       xmlns:activity="clr-namespace:SchoolSystem.App.Views.Activity"
       x:Class="SchoolSystem.App.Shells.AppShell"
       x:Name="AppShellRoot"
       FlyoutBehavior="Disabled">
    <ShellContent ContentTemplate="{DataTemplate r:StudentListView}" Route="students"></ShellContent>
    <TabBar>
        <Tab Title="Activities">
            <ShellContent 
                Title="Activities"
                ContentTemplate="{DataTemplate a:ActivityListView}"
                Route="activities"/>
        </Tab>
        <Tab Title="Subjects">
            <ShellContent 
                Title="Subjects"
                ContentTemplate="{DataTemplate subjects:SubjectListView}"
                Route="subjects"/>
        </Tab>
        <Tab Title="Profile">
            <ShellContent 
                Title="Profile"
                ContentTemplate="{DataTemplate r:StudentDetailView}"
                Route="profile"/>
        </Tab>
    </TabBar>
</Shell>

    