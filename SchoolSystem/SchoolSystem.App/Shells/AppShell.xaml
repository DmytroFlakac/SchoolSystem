<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:r="clr-namespace:SchoolSystem.App.Views.Student"
       xmlns:students="clr-namespace:SchoolSystem.App.Views.Student"
       xmlns:a="clr-namespace:SchoolSystem.App.Views.Activity"
       xmlns:text="clr-namespace:SchoolSystem.App.Resources.Texts"
       xmlns:subject="clr-namespace:SchoolSystem.App.Views.Subject"
       x:Class="SchoolSystem.App.Shells.AppShell"
       x:Name="AppShellRoot"
       FlyoutBehavior="Disabled">
    <ShellContent ContentTemplate="{DataTemplate subject:SubjectListView}" Route="subjects"></ShellContent>
    <TabBar>
        <Tab Title="Activities">
            <ShellContent 
                Title="Activities"
                ContentTemplate="{DataTemplate a:ActivityListView}"
                Route="activities"/>
        </Tab>
        <Tab Title="Students">
            <ShellContent 
                Title="Students"
                ContentTemplate="{DataTemplate students:StudentListView}"
                Route="students"/>
        </Tab>
        <Tab Title="Profile">
            <ShellContent 
                Title="Subject Overview"
                ContentTemplate="{DataTemplate subject:SubjectDetailView}"
                Route="subject"/>
        </Tab>
    </TabBar>
</Shell>

    