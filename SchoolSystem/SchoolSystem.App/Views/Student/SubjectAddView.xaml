<?xml version="1.0" encoding="utf-8"?>

<views2:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:students="clr-namespace:SchoolSystem.App.ViewModels.Students"
                       xmlns:views2="clr-namespace:App.Views"
                       x:Class="SchoolSystem.App.Views.Student.SubjectAddView"
                       Title="Registration of subject"
                       x:Name="SubjectAddViewRoot"
                       x:DataType="students:SubjectAddViewModel">
    <Grid RowDefinitions="70, *">
        <Grid Grid.Row="0"
              ColumnDefinitions="*, Auto"
              ColumnSpacing="15">

            <Button
                    Grid.Column="1"
                    VerticalOptions="Start"
					Text="Save"
                    HeightRequest="30"
                    Command="{Binding SaveCommand}">
            </Button>
            
        </Grid>
        <Grid Grid.Row="1"
              HorizontalOptions="Center" VerticalOptions="Start"
              RowDefinitions="170, *" ColumnDefinitions="Auto, *, Auto"
              RowSpacing="20" ColumnSpacing="20">
            <Picker Title="Select a subject that you want to register" ItemsSource="{Binding Subjects}"
                    SelectedItem="{Binding SelectedSubject}"></Picker>
           
        </Grid>
    </Grid>
</views2:ContentPageBase>