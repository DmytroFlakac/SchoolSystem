<?xml version="1.0" encoding="utf-8" ?>
<views1:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:SchoolSystem.App.Views"
                       xmlns:m="clr-namespace:SchoolSystem.BL.Models;assembly=SchoolSystem.BL"
                       xmlns:vm="clr-namespace:SchoolSystem.App.ViewModels"
                       xmlns:views1="clr-namespace:App.Views"
                       xmlns:activities="clr-namespace:SchoolSystem.App.ViewModels.Activity"
                       x:Class="SchoolSystem.App.Views.Activity.ActivityListView"
                       Title="Activity list"
                       x:Name="ActivityListViewRoot"
                       x:DataType="activities:ActivityListViewModel">
    <Grid HorizontalOptions="FillAndExpand" RowDefinitions="Auto, *"
          RowSpacing="20">
        <Label Grid.Row="0"
               Padding="20, 0"
               FontSize="24"
               VerticalTextAlignment="Center"
               FontAttributes="Bold"
               Text="Activities" />

        <Button Grid.Row="0"
                Padding="20, 6"
                HorizontalOptions="End" VerticalOptions="Start"
                Text="Add Activity"
                Command="{Binding GoToCreateCommand}"

                CornerRadius="5" FontFamily="MontserratMedium"
                FontSize="14"/>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Activities}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:ActivityListModel">
                    <ViewCell>
                        <Grid Padding="20, 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1"
                                   Text="{Binding Name}" 
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Padding="0, 0,10,0"
                                   HorizontalOptions="Start"/>
                            <Label Grid.Column="2"
                                   Text="{Binding Start}"
                                   FontSize="16"
                                   Padding="10, 0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center" /> 
                            <Label Grid.Column="3"
                                   Text="{Binding End}"
                                   FontSize="16"
                                   Padding="10, 0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center" /> 
                            <Label Grid.Column="4"
                                   Text="{Binding Room}"
                                   FontSize="16"
                                   Padding="10, 0"
                                   VerticalOptions="Center" /> 
                            <Label Grid.Column="5"
                                   Text="{Binding Tag}"
                                   Padding="10, 0"
                                   FontSize="16"
                                   VerticalOptions="Center" />

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference ActivityListViewRoot}, Path=BindingContext.GoToDetailCommand}"
                                                      CommandParameter="{Binding Id}" />
                            </Grid.GestureRecognizers>
                        </Grid>


                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</views1:ContentPageBase>